<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DDE21E"
    tools:context="com.fyp.ibtehaj.firestore.StartPageActivity">


    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="64dp"
        app:srcCompat="@mipmap/cover_logo" />


    <Button
        android:id="@+id/start_reg_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_above="@+id/start_login_btn"
        android:layout_alignParentStart="true"
        android:background="#E83850"
        android:onClick="SignInBtn_Click"
        android:paddingBottom="30dp"
        android:paddingTop="30dp"
        android:text="Sales Man"
        android:textColor="#FFF"
        android:textSize="20sp" />

    <Button
        android:id="@+id/start_login_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="0.5dp"
        android:background="#08A8F8"
        android:onClick="SignInBtn_Click"
        android:paddingBottom="25dp"
        android:paddingTop="25dp"
        android:text="Re-Order Man"
        android:textColor="#FFF"
        android:textSize="20sp" />

</RelativeLayout>
